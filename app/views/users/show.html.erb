<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/user', user: @user %>
      <h2>New book</h2>
      <%= render 'books/book', book: @book %>
    </div>
    <div class="col-md-9">
      <h1>Book detail</h1>
      <table class="table-user-show">
        <% @books.each do |book| %>
          <tr>
            <td>
              <%= link_to user_path(@user) do %>
              <%= attachment_image_tag @user, :profile_image, :fil, 60, 60, fallback: "no_image.jpg" %>
              <% end %>
            </td>
            <td><%= link_to book.title, book_path(book.id) %></td>
            <td><%= link_to book.body %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>