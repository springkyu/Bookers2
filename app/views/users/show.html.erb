<div class="profile-container">
  <h3>><%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %></h3>
  <div class="profile-name">name<%= @user.name %></div>
  <div class="profile-introduction">introduction<%= @user.introduction %></div>

  <% if @user.id == current_user.id %>
    <p><%= link_to "edit", edit_user_path(@user) %></p>
  <% end %>
</div>

<div class="col-md-9">
  <h1>Book detail</h1>
  <table class="table-user-show">
    <% @books.each do |book| %>
      <tr>
        <td>
          <%= link_to user_path(@user) do %>
          <%= attachment_image_tag @user, :profile_image, :fil, 60, 60, fallback: "no_image.jpg" %>
          <% end %>
        </td>
        <td><%= link_to book.title, book_path(book.id) %></td>
        <td><%= link_to book.body %></td>
      </tr>
    <% end %>
  </table>
</div>