<div class="profile-container">
  <h3>><%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %></h3>
  <div class="profile-name">name<%= @user.name %></div>
  <div class="profile-introduction">introduction<%= @user.introduction %></div>

  <% if @user.id == current_user.id %>
    <p><%= link_to "edit", edit_user_path(@user) %></p>
  <% end %>
</div>

<h1>Books</h1>
<% @books.each do |book| %>
  <p>UserImage:<%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %></p>
  <p>UserName:<%= book.user.name %></p>
  <%= link_to book_path(book.id) do %>
    <p>Title:<%= book.title %></p>
  <% end %>
  <p>Opinion:<%= book.body %></p>
<% end %>