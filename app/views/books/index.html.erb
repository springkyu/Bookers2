<div class="container">
  <div class="row">
    <%= render 'books/error', model: @book %>

    <div class="col-md-3">
      <%= render 'users/user', user: @user %>
      <h2>New book</h2>
      <%= render 'books/book', book: @book %>
    </div>

    <div class="col-md-9">
      <table class="table-book-index">
        <h1>Books</h1>
        <thead>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
        </thead>

        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td>
                <%= link_to user_path(book.user) do %>
                  <%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>
                <% end %>
              </td>
              <td><%= link_to book.title, book_path(book.id) %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>

      </table>
    </div>

  </div>
</div>